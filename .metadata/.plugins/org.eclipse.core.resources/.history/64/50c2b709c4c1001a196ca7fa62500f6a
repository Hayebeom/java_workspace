package level1;

import java.util.*;

public class sameNumberNo {
   
    	long n = 12345;
        int[] answer = new int[(int)(Math.log10(n)+1)];
        System.out.println(answer);
        // 숫자를 배열로 만든다
        
        for (int i=0; i<answer.length; i++) {
            answer[i] = (int) n%10;
            n = n/10;
            
            if (n>=10) {
                continue;
            } else {
                answer[i+1] = (int) n%10;
                break;
            }
        }
        
        // 역순 배치
        Arrays.sort(answer);
        Collections.reverse(Arrays.asList(answer));
        
        return answer;
    
}